<Window x:Class="Chapter2.Layouts.WrapPanelSample" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="WrapPanel" Height="200" Width="500">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<WrapPanel>
			<Button Content="A Button" />
			<Button Content="Another Button" />
			<TextBlock Text="This is a text block" />
			<Button Content="Short" />
			<Button Content="Really Long Button Label" />
		</WrapPanel>
	</Grid>
</Window>