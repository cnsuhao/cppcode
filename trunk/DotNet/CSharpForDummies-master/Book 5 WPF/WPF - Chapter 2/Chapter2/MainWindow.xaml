<Window x:Class="Chapter2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chapter 2 Samples" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" Content="Layouts" Margin="3,20,3,20"
            Command="{Binding Path=LaunchWindowCmd}" CommandParameter="LayoutSamples"/>
        <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" Content="Controls" Margin="3,20,3,20"
            Command="{Binding Path=LaunchWindowCmd}" CommandParameter="ControlSamples"/>
    </Grid>
</Window>
